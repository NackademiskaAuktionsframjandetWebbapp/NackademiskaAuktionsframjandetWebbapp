<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/auctionImageView"
        android:layout_width="133dp"
        android:layout_height="169dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fotboll" />

    

    <TextView
        android:id="@+id/auctionNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="En alldeles ny fotboll"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/auctionImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/auctionPriceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="100 kr"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/auctionImageView"
        app:layout_constraintTop_toBottomOf="@+id/auctionNameView" />
</android.support.constraint.ConstraintLayout>
